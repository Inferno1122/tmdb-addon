{
  "version": 2,
  "builds": [
    {
      "src": "src/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "^/configure$", "dest": "/public/index.html" },
    { "src": "^/configure/(.*)", "dest": "/public/$1" },

    { "src": "^/public/(.*)", "dest": "/public/$1" },

    { "src": "^/(.*)\\.(js|css|png|jpg|svg|ico|woff2?)$", "dest": "/public/$1.$2" },

    { "src": "^(.*)/manifest\\.json$", "dest": "/src/server.js" },
    { "src": "^/api/(.*)", "dest": "/src/server.js" },
    { "src": "^/(.*)$", "dest": "/src/server.js" }
  ]
}
